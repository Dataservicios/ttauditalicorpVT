<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lyControles">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¿ Celular Ok?"
            android:id="@+id/tvPregunta" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSeEncuentra"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:id="@+id/swSiNo"
            android:text=""
            android:textOn="@string/sw_si"
            android:textOff="@string/sw_no"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lyEdition"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Celular"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:id="@+id/etCell"
                android:inputType="phone"
                android:maxLength="9"
                android:layout_weight="1" />

        </LinearLayout>



    </LinearLayout>




    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="GUARDAR"
                android:id="@+id/btGuardar"
                android:layout_margin="10dp"
                style="@style/BottonCloseAudit" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="CANCELAR"
                android:layout_margin="10dp"
                style="@style/BottonCloseAudit"
                android:id="@+id/btCancelar" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
